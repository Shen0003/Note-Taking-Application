<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="300dp"
        android:height="100dp"
        android:bottom="6dp"
        android:drawable="@drawable/t2_item_bg"
        android:left="5dp"
        android:right="5dp"
        android:top="6dp" />
    <item>
        <shape
            android:padding="10dp"
            android:shape="rectangle">
            <corners android:radius="10dp" />
